
source ./controller
[[ -f "constants.conf" ]] && source ./constants.conf

# ------------------------------------------------------------------- #
#                             INSTALLATION                            #
# ------------------------------------------------------------------- #

set_date
read -p ""
disk_partition
read -p ""
install_primary_setup
read -p ""
install_packages_part_1
read -p ""
install_packages_part_2
read -p ""
modify_config
read -p ""

# ------------------------------------------------------------------- #
#                           REDIRECT TO CHROOT                        #
# ------------------------------------------------------------------- #

cp ./controller /mnt
cp ./chroot /mnt
cp ./constants.conf /mnt
arch-chroot /mnt /chroot

exit 0
